# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Application Settings
APP_NAME="Network Scanner"
APP_VERSION="0.1.0"
DEBUG=false
LOG_LEVEL=INFO

# Network Configuration
# Default network to scan (your home network)
DEFAULT_NETWORK=192.168.156.0/24
DEFAULT_GATEWAY=192.168.156.1

# Database Configuration
DATABASE_URL=postgresql://netscanner:your_password_here@localhost:5432/network_scanner
DATABASE_ECHO=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Firewalla Integration
FIREWALLA_HOST=192.168.156.1
FIREWALLA_SSH_PORT=8022
FIREWALLA_USERNAME=pi
FIREWALLA_SSH_KEY_PATH=/home/yourusername/.ssh/firewalla_key
FIREWALLA_ENABLE_INTEGRATION=true

# Scanning Configuration
# Maximum concurrent scans
MAX_CONCURRENT_SCANS=10

# Scan intervals (seconds)
QUICK_SCAN_INTERVAL=300      # 5 minutes
FULL_SCAN_INTERVAL=3600      # 1 hour
PASSIVE_MONITOR_INTERVAL=60   # 1 minute

# Nmap configuration
NMAP_TIMEOUT=300
NMAP_MAX_RATE=1000
NMAP_MIN_RATE=100

# Masscan configuration
MASSCAN_RATE=10000
MASSCAN_TIMEOUT=300

# Security Settings
# Require confirmation before scanning
REQUIRE_SCAN_CONFIRMATION=true

# Enable ethical use warning on startup
SHOW_ETHICS_WARNING=true

# Maximum allowed network size (CIDR)
MAX_NETWORK_SIZE=24  # /24 = 254 hosts

# Vulnerability Scanning
VULNERS_API_KEY=
CVE_DATABASE_UPDATE_INTERVAL=86400  # 24 hours

# Data Retention
SCAN_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Notification Settings
ENABLE_NOTIFICATIONS=false
NOTIFICATION_EMAIL=
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Advanced Settings
ENABLE_PACKET_CAPTURE=false
PCAP_STORAGE_PATH=/home/yourusername/Projects/network-scanner/data/pcaps
MAX_PCAP_SIZE_MB=1000

# Feature Flags
FEATURE_WIRELESS_SCANNING=false
FEATURE_VULNERABILITY_SCANNING=true
FEATURE_FIREWALLA_INTEGRATION=true
FEATURE_AUTO_DISCOVERY=true
